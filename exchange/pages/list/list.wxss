.row {
  padding: 15rpx 20rpx;
  border-top:1px solid #f2f2f2;
  width:100%;
  background-color: #fff;
  font-size: 30rpx;
}
.row:last-child{
  border-bottom:1px solid #f2f2f2;
}
.currency {
  width:493rpx;
  display: flex;
  padding-left:80rpx
}
.currency image{
  margin-top: 16rpx;
  width: 60rpx;
  height: 60rpx;
  border:1px solid #eee;
}
.flex-col{
  margin-left:36rpx;
  
}
.small {
  margin-top: 10rpx;
  font-size: 35rpx;
}
.selected {
  width: 100%;
  text-align: right;
  padding-right: 80rpx;
}
.selected image {
  width: 50rpx;
  height: 35rpx;
  margin-top: 20rpx;
  

}
.twoCurrency{
  width: 260rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: #5e5e5e;
  border-radius: 15rpx;
  position: fixed;
  left: 50%;
  margin-left: -130rpx;
  top: 200px;
  color: #fff;
}
.confirm{
  width:100%;
  height: 100rpx;
  text-align: center;
  line-height: 85rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
}
.container{
  padding-bottom:100rpx;
}